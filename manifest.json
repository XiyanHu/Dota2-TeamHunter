{
    "manifest_version": 2,
    "name": "Dota2 TeamHunter",
    "update_url": "https://clients2.google.com/service/update2/crx",
    "version": "1.1.0",
    "description": "Focus on your favourite Dota2 team.Get team info and recent match results.",
    "icons": {
        "128": "images/icon128.png",
        "48": "images/icon48.png",
        "16": "images/icon16.png"
    },
    "background": {
        "scripts": [
            "js/getdata.js"
        ],
      "persistent":true
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png"
        },
        "default_popup": "index.html"
    },
    "permissions": [
        "https://api.opendota.com/api/*"
    ]
}